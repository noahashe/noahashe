  <script>
    const home = document.getElementById('home');
    const app = document.getElementById('app');
    const year = document.getElementById('year'); year.textContent = new Date().getFullYear();

    function showSection(target){
      if(target === 'home'){
        home.style.display = 'grid'; app.style.display = 'none'; window.scrollTo(0,0);
      } else {
        home.style.display = 'none'; app.style.display = 'block';
        document.getElementById(target === 'works' ? 'works': 'aboutPage').scrollIntoView({behavior:'smooth'});
      }
    }

    document.querySelectorAll('[data-target]').forEach(el=>{
      el.addEventListener('click', ()=> showSection(el.dataset.target));
      el.addEventListener('keydown', (e)=>{ if(e.key === 'Enter') showSection(el.dataset.target) });
    });

    /* VIEWER */
    const viewer = document.getElementById('viewer'); 
    const viewerImg = document.getElementById('viewerImg');
    document.getElementById('closeView').addEventListener('click', ()=> viewer.style.display='none');
    viewer.addEventListener('click', (e)=>{ if(e.target === viewer) viewer.style.display='none'; });

    const images = document.querySelectorAll('.collage .item img');
    images.forEach(img => img.addEventListener('click', ()=>{
      viewerImg.src = img.src;
      viewerImg.alt = img.alt;
      viewer.style.display='grid';
    }));

    /* AUDIO */
    const audio = document.getElementById('bgAudio'); audio.volume = 0.08;
    const audioControl = document.getElementById('audioControl'); 
    const audioIcon = document.getElementById('audioIcon');

    function updateAudioIcon(){ audioIcon.style.color = audio.paused ? 'var(--muted)' : 'var(--accent)'; }
    audio.play().then(updateAudioIcon).catch(updateAudioIcon);
    audioControl.addEventListener('click', ()=>{ audio.paused ? audio.play() : audio.pause(); updateAudioIcon(); });

    /* START ON HOME */
    showSection('home');
    document.addEventListener('keydown', (e)=>{ if(e.key === 'Escape') showSection('home'); });
  </script>
